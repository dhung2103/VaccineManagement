<dx:ThemedWindow
    x:Class="VaccineManagement.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    Title="Login" Height="400" Width="300"
    WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <!-- Login Form Container -->
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="Gray" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Đăng nhập" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

                <!-- Username Field -->
                <dxe:TextEdit Name="UsernameTextBox" NullText="Tài khoản" Width="200" Margin="0,0,0,10" />

                <!-- Password Field -->
                <dxe:PasswordBoxEdit Name="PasswordBox" NullText="Mật khẩu" Width="200" Margin="0,0,0,20" ShowPasswordButtonVisibility="Always"/>

                <!-- Login Button -->
                <dx:SimpleButton Content="Đăng nhập" Width="200" Margin="0,0,0,10" HorizontalAlignment="Center" 
                                  Click="LoginButton_Click" />

                <!-- Register Link -->
                <!--<TextBlock Text="Don't have an account? Register here." Foreground="Blue" HorizontalAlignment="Center" 
                           Cursor="Hand" Margin="0,10,0,0" />-->
            </StackPanel>
        </Border>
    </Grid>
</dx:ThemedWindow>
